#!/bin/sh

source ./runes.sh

echo "runes"

# Reading the runes files
readarray RUNES < .creep/.runes

IFS=$'\n'
FILES=$(git status --porcelain)

for FILE in ${FILES[@]}; do
	FILE=${FILE#*  }
	echo "Checking the files ($FILE)"
	if runes.isRune $FILE; then
		echo "Found a rune ${FILE}"
		#TODO: encrypt
	fi;
done
